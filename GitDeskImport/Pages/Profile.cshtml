@page
@model ProfileModel
@{
    ViewData["Title"] = "My Profile";
}

<h2 class="mb-4">System Configuration - Connections</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form method="post">
    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    Zendesk Connection
                </div>
                @if (Model.IsZendeskConfigured)
                                    {
                                        <span class="badge bg-success">Connected</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Not Connected</span>
                                    }
                <div class="card-body">
                    <p class="text-muted mb-3">
                        Connect your Zendesk account so we can sync support tickets.
                    </p>
                    <div class="mb-3">
                        <label asp-for="Input.ZendeskDomain" class="form-label">Zendesk Domain</label>
                        <input asp-for="Input.ZendeskDomain" class="form-control" placeholder="yourcompany.zendesk.com" />
                        <small class="form-text text-muted">Enter your full Zendesk subdomain (without https://).</small>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Input.ZendeskApiToken" class="form-label">API Token</label>
                        <input asp-for="Input.ZendeskApiToken" class="form-control" placeholder="Paste your token here" />
                        <small class="form-text text-muted">Find this under Admin → API → Token Access in Zendesk.</small>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    GitHub Connection
                </div>
                @if (Model.IsGitHubConfigured)
                                    {
                                        <span class="badge bg-success">Connected</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Not Connected</span>
                                    }
                <div class="card-body">
                    <p class="text-muted mb-3">
                        Connect your GitHub account to sync issues and comments.
                    </p>
                    <div class="mb-3">
                        <label asp-for="Input.GitHubUsername" class="form-label">GitHub Username</label>
                        <input asp-for="Input.GitHubUsername" class="form-control" placeholder="octocat" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Input.GitHubToken" class="form-label">Personal Access Token</label>
                        <input asp-for="Input.GitHubToken" class="form-control" placeholder="Paste your token here" />
                        <small class="form-text text-muted">
                            Generate a token at <a href="https://github.com/settings/tokens" target="_blank">github.com/settings/tokens</a>
                            with <code>repo</code> and <code>issues</code> scopes.
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="text-end">
        <button class="btn btn-success btn-lg" type="submit">Save Changes</button>
    </div>
</form>
